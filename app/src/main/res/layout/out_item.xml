<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:circularflow_radiusInDP="15dp">

    <TextView
        android:id="@+id/varBack"
        style="@style/blockBackground"
        android:backgroundTint="@color/out_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/varText"
        style="@style/blockText"
        android:text="@string/out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/varNameOut"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/varBack"
        app:layout_constraintTop_toTopOf="@+id/varBack" />

    <EditText
        android:id="@+id/varNameOut"
        style="@style/blockEdit"
        android:layout_width="@dimen/oneEditWidth"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/oneEditMarginStart"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/varBack"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/varText"
        app:layout_constraintTop_toTopOf="@+id/varBack" />
</androidx.constraintlayout.widget.ConstraintLayout>